#include "control_Led.h"

uint16_t GPIO_PIN [12] = {Led1_Pin, Led2_Pin, Led3_Pin, Led4_Pin, Led5_Pin, Led6_Pin, Led7_Pin, Led8_Pin, Led9_Pin, Led10_Pin, Led11_Pin, Led12_Pin};

void clearAllClock() {
	for (int i = 0; i < 12; i++) {
		HAL_GPIO_WritePin(GPIOA, GPIO_PIN[i], RESET);
	}
}
void setNumberOnClock(int num) {

	if (num >= 0 && num < 12) {
		HAL_GPIO_WritePin(GPIOA, GPIO_PIN[num], SET);
	}

}
void clearNumberOnClock(int num);
