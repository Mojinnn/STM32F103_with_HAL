#include "software_timer.h"

int flag_counter[SIZE];
int counter[SIZE];
int CYCLE_TIMER = 10;

void setTimer(int order, int duration) {
	counter[order] = duration/CYCLE_TIMER;
	flag_counter[order] = 1;
}

void runTimer(int order) {
	if (flag_counter[order] > 0) {
		counter[order]--;
		if (counter[order] <= 0) {
			flag_counter[order] = 0;
		}
	}
}
